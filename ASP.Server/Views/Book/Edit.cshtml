@using ASP.Server.Controllers
@model EditBookModel
@{
    ViewData["Title"] = "Edit a book";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<form asp-controller="Book" asp-action="Update">
    <input asp-for="Book.Id" type="hidden" value="@Model.Book.Id"  />
    <div class="input-group">
        <label >Name</label>
        <input asp-for="Book.Name" required value="@Model.Book.Name"  />
    </div>
    <div class="input-group">
        <label >Author</label>
        <input asp-for="Book.Author" required value="@Model.Book.Author"/>
    </div>
     <div class="input-group">
        <label>Content</label>
        <textarea asp-for="Book.Content" required >@Model.Book.Content</textarea>     
    </div>
    <div class="input-group">
        <label >Price</label>
        <input asp-for="Book.Price" required type="number" value="@Model.Book.Price"/>
    </div>
    <div class="input-group">
        <label>Genres</label>
        <!--Si la page rend une erreur a cette ligne, c'est que vous n'avez pas envoyé la liste des genres dans le Controller !!! ! -->
        <select asp-for="Genres" required asp-items="@(new SelectList(Model.AllGenres,"Id","Name"))">
        </select>
    </div>
   <!-- Code pour ajouter les genres -->
    <input type="submit" value="Edit" style="width: 100%; margin-top: 50px" />
</form>
                        